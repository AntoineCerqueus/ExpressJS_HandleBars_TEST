<input id="input-search" type="text" name="search" value="{{searchKey}}">
<button id="button-search" type="submit">Rechercher</button>


<h1>Base de Donn√©es ClassicModels</h1>

<table>
    <thead>
        <tr>
            <td>Code</td>
            <td>Nom</td>
            <td>Prix</td>
        </tr>
    </thead>
    <tbody id="table-body">
        {{#each products}}
        <tr>
            <td>{{this.productCode}}</td>
            <td>{{this.productName}}</td>
            <td>{{this.buyPrice}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Specifie le type pour le navigateur ! --}}
{{!-- Echappement pour eviter conflit entre front et back (c'est sale!) --}}
<script id="template-products" type="text/handlebars">
    \{{#each products}}
        <tr>
            <td>\{{this.productCode}}</td>
            <td>\{{this.productName}}</td>
            <td>\{{this.buyPrice}}</td>
        </tr>
    \{{/each}}
</script>